<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="0dp"
    android:background="@color/white"
    tools:context="com.galanto.GalantoHealth.Dashboard">

     <androidx.cardview.widget.CardView
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         app:cardCornerRadius="0dp"
         app:cardElevation="30dp">
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:background="@color/accent_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".4">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="20dp"


            android:paddingLeft="0dp"
            android:paddingTop="20dp">

            <ImageButton
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_tab_logo" />


            <ImageButton
                android:id="@+id/homeIbtn"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_marginTop="130dp"
                android:background="@null"
                android:padding="20dp"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/home_icon" />

            <ImageButton
                android:id="@+id/gameIbtn"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:background="@null"
                android:padding="20dp"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/homeIbtn"
                app:srcCompat="@drawable/game_icon" />

            <ImageButton
                android:id="@+id/reportIbtn"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:background="@null"
                android:padding="20dp"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gameIbtn"
                app:srcCompat="@drawable/report_icon" />

            <ImageButton
                android:id="@+id/settingsIbtn"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:background="@null"
                android:padding="20dp"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reportIbtn"
                app:srcCompat="@drawable/ic_setting" />

            <ImageButton
                android:id="@+id/signoutIbtn"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_marginBottom="20dp"
                android:background="@null"
                android:scaleX="-1"
                android:padding="20dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_exit" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coming Soon"
                android:textColor="@color/white"
                android:textSize="9sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:fontFamily="@font/surce_sans_pro_regular"
                android:background="@color/red"
                app:layout_constraintBottom_toBottomOf="@+id/gameIbtn"
                app:layout_constraintEnd_toEndOf="@+id/gameIbtn" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout1"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="0dp"
        app:layout_constraintWidth_percent=".6">


    </LinearLayout>

</LinearLayout>