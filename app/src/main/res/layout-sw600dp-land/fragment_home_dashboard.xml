            app:cardElevation="10dp"
            app:layout_constraintStart_toEndOf="@+id/game1Card"
            app:layout_constraintTop_toTopOf="@+id/game1Card">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
