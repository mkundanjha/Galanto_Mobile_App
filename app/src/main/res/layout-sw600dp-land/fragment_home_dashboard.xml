                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"

                android:src="@drawable/hand_idc"
                app:layout_constraintStart_toEndOf="@+id/ivMiddlePIP"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
                app:tint="@color/dark_blue" />

            <ImageView
                android:id="@+id/ivRingMCP"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="50dp"

                android:src="@drawable/hand_idc"
                app:layout_constraintStart_toEndOf="@+id/ivMiddleMCP"
                app:layout_constraintTop_toBottomOf="@+id/ivRingPIP"
                app:tint="@color/dark_blue" />

            <ImageView
                android:id="@+id/ivLittlePIP"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="17dp"

                android:src="@drawable/hand_idc"
                app:layout_constraintStart_toEndOf="@+id/ivRingPIP"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout5"
                app:tint="@color/dark_blue" />

            <ImageView
                android:id="@+id/ivLittleMCP"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="65dp"

                android:src="@drawable/hand_idc"
                app:layout_constraintStart_toEndOf="@+id/ivRingMCP"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout5"
                app:tint="@color/dark_blue" />


