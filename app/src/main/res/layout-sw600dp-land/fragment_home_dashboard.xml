            <ImageView
                android:id="@+id/ivThumbPIP"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"

                android:src="@drawable/hand_idc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.155"
                app:layout_constraintStart_toStartOf="@+id/imageView16"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/ivIndexPIP"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="45dp"
                android:src="@drawable/hand_idc"
                app:layout_constraintStart_toEndOf="@+id/constraintLayout4"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                app:tint="@color/dark_blue" />

            <ImageView
                android:id="@+id/ivIndexMCP"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="75dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/hand_idc"
                app:layout_constraintStart_toEndOf="@+id/constraintLayout4"
                app:layout_constraintTop_toBottomOf="@+id/ivIndexPIP"
                app:tint="@color/dark_blue" />

            <ImageView
                android:id="@+id/ivMiddlePIP"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="55dp"

                android:src="@drawable/hand_idc"
                app:layout_constraintStart_toEndOf="@+id/ivIndexPIP"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
                app:tint="@color/dark_blue" />

            <ImageView
                android:id="@+id/ivMiddleMCP"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"

                android:src="@drawable/hand_idc"
                app:layout_constraintStart_toEndOf="@+id/ivIndexMCP"
                app:layout_constraintTop_toBottomOf="@+id/ivMiddlePIP"
                app:tint="@color/dark_blue" />

            <ImageView
                android:id="@+id/ivRingPIP"
                android:layout_width="20dp"
