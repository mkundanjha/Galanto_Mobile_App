                    android:id="@+id/imageView12"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:padding="7dp"
                    android:src="@drawable/ic2" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.constraintlayout.widget.ConstraintLayout
