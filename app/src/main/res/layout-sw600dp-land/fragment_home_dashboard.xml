                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:padding="7dp"
                    android:src="@drawable/ic5" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/game1Card"
