                android:layout_height="420dp"
                android:background="@color/dark_blue"
                android:orientation="vertical"
                android:padding="25dp">

                <TextView
                    android:id="@+id/textView46"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/pip_tab"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:gravity="center"
                    android:text="Last Game"
                    android:textAlignment="gravity"
                    android:textColor="@color/dark_blue"
                    android:textSize="18dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="10dp"

                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="400dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="300dp"
                        android:layout_height="120dp"
                        android:background="@drawable/gradient_blue">

                        <LinearLayout
                            android:id="@+id/linearLayout3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_yellow"
                            android:orientation="vertical"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/imageView19"
                                android:layout_width="90dp"
                                android:layout_height="70dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/ic5" />

                            <TextView
                                android:id="@+id/lastGameName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/surce_sans_pro_regular"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                android:text="Game 1"
                                android:textAlignment="gravity"
                                android:textSize="18dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView44"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/surce_sans_pro_regular"
                            android:text="Congrats! You're a"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/linearLayout3"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView45"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="40dp"
                            android:fontFamily="@font/source_sans_pro_bold"
                            android:text="Performer"
                            android:textColor="@color/dark_blue"
                            android:textSize="35dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/linearLayout3"
                            app:layout_constraintTop_toBottomOf="@+id/textView44" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_bottom_border"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/source_sans_pro_bold"
                        android:text="Last\nSession"
                        android:textColor="@color/white"
                        android:textSize="20dp"

                        />

                    <TextView
                        android:id="@+id/lastSsnTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/surce_sans_pro_regular"
                        android:gravity="right"
                        android:text="13 min"
                        android:textAlignment="gravity"
                        android:textColor="@color/light_grey"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_bottom_border"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/source_sans_pro_bold"
                        android:text="Success \nRate"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/surce_sans_pro_regular"
                        android:gravity="right"
                        android:text="23 %"
                        android:textAlignment="gravity"
                        android:textColor="@color/light_grey"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/source_sans_pro_bold"
                        android:text="Reaction\nTime"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/surce_sans_pro_regular"
                        android:gravity="right"
                        android:text="0.55"
                        android:textAlignment="gravity"
                        android:textColor="@color/light_grey"
                        android:textSize="20dp" />
                </LinearLayout>
